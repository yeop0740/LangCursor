{
  "name": "LangCursor",
  "displayName": "LangCursor",
  "description": "identify system language by cursor color.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yeop0740/LangCursor"
  },
  "license": "MIT",
  "contributes": {
    "configuration": {
      "title": "LangCursor",
      "properties": {
        "lang-cursor.primaryLangColor.light": {
          "type": "string",
          "default": "#ffffff",
          "description": "Primary language cursor color for light themes."
        },
        "lang-cursor.primaryLangColor.dark": {
          "type": "string",
          "default": "#000000",
          "description": "Primary language cursor color for dark themes."
        },
        "lang-cursor.secondaryLangColor.light": {
          "type": "string",
          "default": "#fbff00",
          "description": "Secondary language cursor color for light themes."
        },
        "lang-cursor.secondaryLangColor.dark": {
          "type": "string",
          "default": "#00ff00",
          "description": "Secondary language cursor color for dark themes."
        },
        "lang-cursor.checkInterval": {
          "type": "number",
          "default": 1000,
          "description": "Check interval in milliseconds."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
